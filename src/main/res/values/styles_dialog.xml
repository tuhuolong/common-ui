<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="MenuDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.MenuDialog</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="AlertDialogActivity" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Animation" />

    <style name="Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="Animation.MenuDialog">
        <item name="android:windowEnterAnimation">@anim/menu_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/menu_dialog_exit</item>
    </style>


    <style name="progress_dialog_circle_progressbar_large">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">
            @drawable/progress_dialog_circle_progressbar_indeterminate
        </item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">5000</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="ProgressDialogSimple">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="progress_dialog_circle_loading_progress">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">
            @drawable/progress_dialog_circle_loading_progress
        </item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">5000</item>
        <item name="android:scaleType">center</item>
    </style>

</resources>
